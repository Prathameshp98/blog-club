
<div class="blog-form-main">
    <% if(errorMessage){ %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="blog-form-inner" action="/add-blog" method="POST">
        <h2>New Blog</h2>
        <div class="form-control">
            <label class="required" for="title">Title</label>
            <input type="text" name="title" id="title" autocomplete="off">
            <p id="title-valid"></p>
        </div>
        <div class="form-control">
            <label for="imageurl">Image URL</label>
            <input type="text" name="imageurl" id="imageurl" autocomplete="off">
            <p id="imageurl-valid"></p>
        </div>
        <div class="form-control">
            <label  class="required" for="content">Content</label>
            <textarea name="content" id="content" autocomplete="off"></textarea>
            <p id="content-valid"></p>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" id="submit-button" disabled>Publish</button>
    </form>
</div>